{
  "name": "tilda-book-scraper",
  "version": "0.0.3",
  "description": "Scrape book content from Tilda-based websites, convert to markdown, and generate PDF",
  "author": {
    "name": "Mikhail Niakrasau",
    "url": "https://nmikle.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmikle/tilda-book-scraper.git"
  },
  "homepage": "https://github.com/nmikle/tilda-book-scraper",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "./scripts/update-coverage.sh",
    "scrape": "tsx src/scrape.ts",
    "merge": "tsx src/merge.ts",
    "pdf": "tsx src/pdf.ts",
    "all": "tsx src/index.ts"
  },
  "keywords": [
    "tilda",
    "scraper",
    "book",
    "pdf",
    "markdown",
    "puppeteer",
    "web-scraping"
