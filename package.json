  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "md-to-pdf": "^5.2.4",
    "puppeteer": "^23.10.0",
    "sharp": "^0.34.5",
    "tsx": "^4.19.0",
    "turndown": "^7.2.0"
  }
