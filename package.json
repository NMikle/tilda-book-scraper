{
  "name": "tilda-book-scraper",
  "version": "0.0.3",
  "description": "Scrape book content from Tilda-based websites, convert to markdown, and generate PDF",
  "author": {
    "name": "Mikhail Niakrasau",
    "url": "https://nmikle.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmikle/tilda-book-scraper.git"
  },
  "homepage": "https://github.com/nmikle/tilda-book-scraper",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "./scripts/update-coverage.sh",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "scrape": "tsx src/scrape.ts",
    "merge": "tsx src/merge.ts",
    "pdf": "tsx src/pdf.ts",
    "all": "tsx src/index.ts",
    "prepare": "husky"
  },
  "keywords": [
    "tilda",
    "scraper",
    "book",
    "pdf",
    "markdown",
    "puppeteer",
    "web-scraping"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.10.0",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write"
    ]
  },
  "dependencies": {
    "md-to-pdf": "^5.2.4",
    "puppeteer": "^23.10.0",
    "sharp": "^0.34.5",
    "tsx": "^4.19.0",
    "turndown": "^7.2.0"
  }
}
